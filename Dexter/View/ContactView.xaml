<Window x:Class="Dexter.View.ContactView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Contact" Height="Auto" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="Label" BasedOn="{StaticResource BaseStyle}">
                <Setter Property="Grid.Column" Value="0"/>
            </Style>
            <Style TargetType="TextBox" BasedOn="{StaticResource BaseStyle}">
                <Setter Property="Grid.Column" Value="1"/>
            </Style>
        </Grid.Resources>
        <Label Grid.Row="0">Name:</Label>
        <TextBox Name="ContactName" Grid.Row="0" Text="{Binding Name}"/>
        <Label Grid.Row="1">Email:</Label>
        <TextBox Name="ContactEmail" Grid.Row="1" Text="{Binding Email}"/>
        <StackPanel Grid.Row="2" Grid.ColumnSpan="2" Orientation="Horizontal" FlowDirection="RightToLeft">
            <Button IsCancel="True">Close</Button>
        </StackPanel>
    </Grid>
</Window>
